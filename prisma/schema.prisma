// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id      String      @id @default(uuid())  @map("_id")
  title   String
  content String
  userId  String
  createdAt DateTime  @default(now())
  imageUrl  String
}